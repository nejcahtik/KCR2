<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.collections.FXCollections?>
<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.kcr2.TimeofrentalController"
      prefHeight="500.0" prefWidth="600.0">

    <fx:define>
        <FXCollections fx:factory="observableArrayList" fx:id="hours">
            <String fx:value="00"/>
            <String fx:value="01"/>
            <String fx:value="02"/>
            <String fx:value="03"/>
            <String fx:value="04"/>
            <String fx:value="05"/>
            <String fx:value="06"/>
            <String fx:value="07"/>
            <String fx:value="08"/>
            <String fx:value="09"/>
            <String fx:value="10"/>
            <String fx:value="11"/>
            <String fx:value="12"/>
            <String fx:value="13"/>
            <String fx:value="14"/>
            <String fx:value="15"/>
            <String fx:value="16"/>
            <String fx:value="17"/>
            <String fx:value="18"/>
            <String fx:value="19"/>
            <String fx:value="20"/>
            <String fx:value="21"/>
            <String fx:value="22"/>
            <String fx:value="23"/>
        </FXCollections>
    </fx:define>

    <fx:define>
        <FXCollections fx:factory="observableArrayList" fx:id="minutes">
            <String fx:value="00"/>
            <String fx:value="15"/>
            <String fx:value="30"/>
            <String fx:value="45"/>
        </FXCollections>
    </fx:define>

    <Text text="Izberite začetni datum vaše izposoje"/>
    <DatePicker fx:id="datePickerStart"/>
    <Text text="Ura prevzema"/>
    <HBox alignment="CENTER">
        <ComboBox fx:id="pickuphour" promptText="Ura">
            <items>
                <fx:reference source="hours"/>
            </items>
        </ComboBox>

        <ComboBox fx:id="pickupminute" promptText="Minute">
            <items>
                <fx:reference source="minutes"/>
            </items>
        </ComboBox>
    </HBox>

    <Text text="Napaka: Izberite čas prevzema." fx:id="errornumberstart"/>

    <Text text="Izberite končni datum vaše izposoje"/>
    <DatePicker fx:id="datePickerEnd"/>
    <Text text="Ura vračila"/>
    <HBox alignment="CENTER">
        <ComboBox fx:id="dropoffhour" promptText="Ura">
            <items>
                <fx:reference source="hours"/>
            </items>
        </ComboBox>

        <ComboBox fx:id="dropoffminute" promptText="Minute">
            <items>
                <fx:reference source="minutes"/>
            </items>
        </ComboBox>
    </HBox>

    <Text text="Napaka: Izberite čas zaključka najema." fx:id="errornumberend"/>

    <Button text="Potrdi izbiro" onAction="#onConfirmDatesButtonClick"/>

</VBox>
